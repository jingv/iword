<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true" >

    <ImageView
        android:id="@+id/logo_inside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:src="@drawable/logo_inside" />

    <RelativeLayout
        android:id="@+id/registered_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_inside"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:gravity="center" >

        <FrameLayout
            android:id="@+id/adduserid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center" >

            <EditText
                android:textSize="15sp"
                android:hint="账号长度不少于两位"
                android:id="@+id/add_userid"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:maxLength="20"
                android:paddingLeft="90dp"
                android:paddingRight="60dp" >
            </EditText>

            <TextView
                android:layout_width="80dp"
                android:layout_height="21dp"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="账号"
                android:textColor="@color/textcolor"
                android:textSize="15sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/addusername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/adduserid"
            android:layout_marginTop="20dp"
            android:gravity="center" >

            <EditText
                android:textSize="15sp"
                android:hint="请输入您的姓名"
                android:id="@+id/add_username"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:maxLength="20"
                android:paddingLeft="90dp"
                android:paddingRight="60dp" >
            </EditText>

            <TextView
                android:layout_width="80dp"
                android:layout_height="21dp"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="姓名"
                android:textColor="@color/textcolor" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/adduserkey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addusername"
            android:layout_marginTop="20dp"
            android:gravity="center" >

            <EditText
                android:textSize="15sp"
                android:hint="密码长度不少于6位"
                android:id="@+id/add_userkey"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:maxLength="20"
                android:paddingLeft="90dp"
                android:paddingRight="60dp"
                android:inputType="textPassword" >
            </EditText>

            <TextView
                android:layout_width="80dp"
                android:layout_height="21dp"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="密码"
                android:textColor="@color/textcolor"
                android:textSize="15sp" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/adduserkeyY"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/adduserkey"
            android:layout_marginTop="20dp"
            android:gravity="center" >

            <EditText
                android:textSize="15sp"
                android:hint="请再次输入密码"
                android:id="@+id/add_userkeyY"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:maxLength="20"
                android:paddingLeft="90dp"
                android:paddingRight="60dp"
                android:inputType="textPassword" >
            </EditText>

            <TextView
                android:layout_width="80dp"
                android:layout_height="21dp"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="确认密码"
                android:textColor="@color/textcolor"
                android:textSize="15sp" />
        </FrameLayout>

        <Button
            android:id="@+id/registered_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/adduserkeyY"
            android:layout_marginTop="40dp"
            android:background="@color/btncolor"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"  />
    </RelativeLayout>

</RelativeLayout>